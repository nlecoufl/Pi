                <h3>Step 0 - Claim product to send : <span id="balance"></span></h3>
                <input type="text" name="from" placeholder="from">
                <input type="text" name="id_product" placeholder="id_product">
                <input type="text" name="amount" placeholder="product amount">
                <input type="text" name="id_shipping" placeholder="id_shipping">            
                <button type="submit">Claim</button>
            </form>
            <form method='POST' action='/admin/sendtx'>
                <h3>Step 1 - Send Product : <span id="balance"></span></h3>
                <input type="text" name="from" placeholder="from">
                <input type="text" name="to" placeholder="to">
                <input type="text" name="amount" placeholder="amount">
                <input type="text" name="id_product" placeholder="id_product">
                <input type="text" name="id_shipping" placeholder="id_shipping">  
                <input type="text" name="date_envoi" placeholder="date_envoi">
                <input type="password" name="privatekey" placeholder="privatekey">
                <button type="submit">Send Product</button>
            </form>


